<div class="bg-white shadow-lg rounded-xl border border-gray-200 p-6">
  <h1 class="text-2xl font-bold mb-6 text-indigo-900">Dostępne kalendarze</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @calendars.each do |calendar| %>
      <div class="bg-white hover:bg-gray-50 border border-gray-200 rounded-xl shadow hover:shadow-lg p-5 transition-all transform hover:-translate-y-1">
        <h2 class="text-xl font-semibold mb-2 text-indigo-900"><%= calendar.name %></h2>
        <p class="text-gray-600 mb-2"><%= calendar.calendar_type %> - <%= calendar.year %></p>
        <p class="mb-4 line-clamp-2 text-gray-700"><%= calendar.description %></p>
        <div class="flex justify-between items-center">
          <p class="text-lg font-bold text-indigo-700"><%= number_to_currency(calendar.price, unit: "PLN", format: "%n %u") %></p>
          <%= link_to "Szczegóły", calendar_path(calendar), class: "bg-gradient-to-r from-blue-800 to-indigo-900 hover:from-blue-900 hover:to-indigo-950 text-white py-2 px-4 rounded-lg shadow transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="mt-8 text-center">
      <%= link_to "Złóż zamówienie", new_order_path, class: "bg-gradient-to-r from-indigo-700 to-blue-900 hover:from-indigo-800 hover:to-blue-950 text-white text-lg font-bold px-8 py-4 rounded-xl shadow-lg transition-all hover:shadow-xl transform hover:-translate-y-1" %>
    </div>
  <% end %>
</div>
