<div class="bg-white shadow rounded-lg p-6">
  <div class="mb-4">
    <%= link_to "&larr; Powrót do zamówienia".html_safe, admin_order_path(@order), class: "text-blue-600 hover:underline" %>
  </div>

  <div class="mb-6">
    <h1 class="text-2xl font-bold">Edytuj dane managera dla zamówienia #<%= @order.id %></h1>
    <p class="text-gray-600 mt-2">Manager: <%= @order.manager_email %></p>
  </div>

  <%= form_with model: @order, url: update_manager_admin_order_path(@order), method: :patch do |form| %>
    <% if @order.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-red-800 font-medium">Wystąpiły błędy podczas aktualizacji danych managera:</h3>
            <ul class="list-disc list-inside text-red-700 mt-2">
              <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <%= form.label :manager_first_name, "Imię managera", class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :manager_first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Podaj imię" %>
      </div>

      <div>
        <%= form.label :manager_last_name, "Nazwisko managera", class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :manager_last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Podaj nazwisko" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= link_to "Anuluj", admin_order_path(@order), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-5 py-2 rounded-lg mr-3" %>
      <%= form.submit "Zapisz zmiany", class: "bg-gradient-to-r from-indigo-600 to-indigo-800 hover:from-indigo-700 hover:to-indigo-900 text-white px-5 py-2 rounded-lg shadow-lg" %>
    </div>
  <% end %>
</div>