<div class="max-w-7xl mx-auto p-6 bg-gray-100">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Eksport zamówień</h1>
    <%= link_to admin_orders_path, class: "bg-gradient-to-r from-gray-700 to-gray-900 hover:from-gray-800 hover:to-gray-950 text-white py-2 px-4 rounded-lg flex items-center shadow-lg" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      <span>Powrót do listy</span>
    <% end %>
  </div>
  
  <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-200">
    <div class="bg-gradient-to-r from-blue-800 to-indigo-900 px-6 py-5">
      <h2 class="text-xl font-semibold text-white">Wybierz opcję eksportu</h2>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-gray-50 hover:bg-white border border-gray-200 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all">
          <%= link_to export_admin_orders_path(format: :xlsx), class: "block p-5" do %>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-medium text-indigo-900 mb-1">Wszystkie zamówienia</h3>
                <p class="text-gray-600 text-sm">Eksportuj wszystkie zamówienia do pliku Excel</p>
              </div>
              <div class="bg-gradient-to-br from-blue-700 to-indigo-900 text-white p-3 rounded-full shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="bg-gray-50 hover:bg-white border border-gray-200 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all">
          <%= link_to export_admin_orders_path(status: "pending", format: :xlsx), class: "block p-5" do %>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-medium text-indigo-900 mb-1">Oczekujące zamówienia</h3>
                <p class="text-gray-600 text-sm">Eksportuj tylko zamówienia oczekujące</p>
              </div>
              <div class="bg-gradient-to-br from-amber-500 to-amber-700 text-white p-3 rounded-full shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="bg-gray-50 hover:bg-white border border-gray-200 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all">
          <%= link_to export_admin_orders_path(status: "confirmed", format: :xlsx), class: "block p-5" do %>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-medium text-indigo-900 mb-1">Zatwierdzone zamówienia</h3>
                <p class="text-gray-600 text-sm">Eksportuj tylko zamówienia zatwierdzone</p>
              </div>
              <div class="bg-gradient-to-br from-blue-700 to-indigo-900 text-white p-3 rounded-full shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="bg-gray-50 hover:bg-white border border-gray-200 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all">
          <%= link_to export_admin_orders_path(status: "rejected", format: :xlsx), class: "block p-5" do %>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-medium text-indigo-900 mb-1">Odrzucone zamówienia</h3>
                <p class="text-gray-600 text-sm">Eksportuj tylko zamówienia odrzucone</p>
              </div>
              <div class="bg-gradient-to-br from-red-600 to-red-800 text-white p-3 rounded-full shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
