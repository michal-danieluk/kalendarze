<h1 class="text-2xl font-bold mb-6">Szczegóły kalendarza</h1>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="p-6">
    <dl>
      <div class="grid grid-cols-2 gap-4 py-2">
        <dt class="text-gray-600 font-medium">Nazwa:</dt>
        <dd><%= @calendar.name %></dd>
      </div>
      <div class="grid grid-cols-2 gap-4 py-2 border-t">
        <dt class="text-gray-600 font-medium">Rok:</dt>
        <dd><%= @calendar.year %></dd>
      </div>
      <div class="grid grid-cols-2 gap-4 py-2 border-t">
        <dt class="text-gray-600 font-medium">Typ:</dt>
        <dd><%= @calendar.calendar_type %></dd>
      </div>
      <div class="grid grid-cols-2 gap-4 py-2 border-t">
        <dt class="text-gray-600 font-medium">Cena:</dt>
        <dd><%= number_to_currency(@calendar.price, unit: "PLN", format: "%n %u") %></dd>
      </div>
      <% if @calendar.description.present? %>
        <div class="grid grid-cols-2 gap-4 py-2 border-t">
          <dt class="text-gray-600 font-medium">Opis:</dt>
          <dd><%= @calendar.description %></dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>

<div class="mt-6 flex space-x-4">
  <%= link_to "Edytuj", edit_admin_calendar_path(@calendar), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <%= button_to "Usuń", admin_calendar_path(@calendar), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: { turbo_confirm: "Czy na pewno chcesz usunąć ten kalendarz?" } %>
  <%= link_to "Powrót do listy", admin_calendars_path, class: "text-blue-500 hover:text-blue-700" %>
</div>