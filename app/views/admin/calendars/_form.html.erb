<%= form_with(model: [:admin, calendar], local: true, class: "max-w-lg") do |form| %>
  <% if calendar.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold mb-2">
        <%= pluralize(calendar.errors.count, "błąd") %> uniemożliwił zapisanie kalendarza:
      </h2>
      <ul class="list-disc list-inside">
        <% calendar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, "Nazwa", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :year, "Rok", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :year, min: Date.today.year, max: Date.today.year + 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :calendar_type, "Typ kalendarza", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :calendar_type, Calendar.available_types, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :price, "Cena", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :price, min: 0.01, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Opis", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :description, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Zapisz", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Anuluj", admin_calendars_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
<% end %>