<%- if controller_name != 'sessions' %>
  <div class="text-center mt-4">
    <span class="text-gray-600">Masz już konto?</span>
    <%= link_to "Zaloguj się", new_session_path(resource_name), class: "ml-1 text-indigo-600 hover:text-indigo-800 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="text-center mt-4">
    <span class="text-gray-600">Nie masz jeszcze konta?</span>
    <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: "ml-1 text-indigo-600 hover:text-indigo-800 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'sessions' %>
  <div class="text-center mt-2">
    <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="text-center mt-2">
    <%= link_to "Nie otrzymałeś instrukcji potwierdzenia?", new_confirmation_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="text-center mt-2">
    <%= link_to "Nie otrzymałeś instrukcji odblokowania?", new_unlock_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="mt-6">
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-white text-gray-500">Lub kontynuuj z</span>
      </div>
    </div>
    
    <div class="mt-6 grid grid-cols-<%= resource_class.omniauth_providers.length > 3 ? '2' : resource_class.omniauth_providers.length %> gap-3">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "flex justify-center items-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <% end %>
    </div>
  </div>
<% end %>